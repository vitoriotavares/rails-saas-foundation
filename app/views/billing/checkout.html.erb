<div class="max-w-4xl mx-auto">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Choose Your Plan</h1>
    <%= link_to "Back to Dashboard", dashboard_path, class: "text-blue-600 hover:text-blue-800" %>
  </div>

  <div class="grid md:grid-cols-2 gap-6">
    <% @plans.each do |plan| %>
      <div class="bg-white p-6 rounded-lg shadow-lg border-2 border-gray-200 hover:border-blue-500 transition-colors">
        <div class="text-center mb-6">
          <h2 class="text-2xl font-bold text-gray-900 mb-2"><%= plan[:name] %></h2>
          <div class="text-4xl font-bold text-blue-600 mb-2">
            $<%= plan[:price] / 100 %>
            <span class="text-lg text-gray-600">/<%= plan[:interval] %></span>
          </div>
        </div>

        <ul class="space-y-3 mb-6">
          <% plan[:features].each do |feature| %>
            <li class="flex items-center">
              <svg class="w-5 h-5 text-green-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <%= feature %>
            </li>
          <% end %>
        </ul>

        <div class="space-y-3">
          <!-- Stripe Checkout -->
          <% if plan[:stripe_price_id].present? %>
            <%= form_with url: create_checkout_session_subscription_path(@user), method: :post, local: true do |f| %>
              <%= f.hidden_field :plan_id, value: plan[:stripe_price_id] %>
              <%= f.hidden_field :processor, value: 'stripe' %>
              <%= f.submit "Subscribe with Stripe", class: "w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
            <% end %>
          <% else %>
            <div class="w-full bg-gray-300 text-gray-500 font-bold py-3 px-4 rounded text-center">
              Stripe Price ID not configured
            </div>
          <% end %>

          <!-- Paddle Checkout -->
          <% if plan[:paddle_price_id].present? %>
            <%= form_with url: create_checkout_session_subscription_path(@user), method: :post, local: true do |f| %>
              <%= f.hidden_field :plan_id, value: plan[:paddle_price_id] %>
              <%= f.hidden_field :processor, value: 'paddle' %>
              <%= f.submit "Subscribe with Paddle", class: "w-full bg-purple-500 hover:bg-purple-700 text-white font-bold py-3 px-4 rounded focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2" %>
            <% end %>
          <% else %>
            <div class="w-full bg-gray-300 text-gray-500 font-bold py-3 px-4 rounded text-center">
              Paddle Price ID not configured
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-8 bg-blue-50 p-6 rounded-lg">
    <h3 class="text-lg font-semibold text-blue-900 mb-2">ðŸ’¡ Development Notice</h3>
    <p class="text-blue-800 text-sm">
      To enable payment processing, configure your Stripe and/or Paddle credentials in the Rails credentials or environment variables.
      The checkout buttons will redirect to the respective payment processor when properly configured.
    </p>
  </div>
</div>