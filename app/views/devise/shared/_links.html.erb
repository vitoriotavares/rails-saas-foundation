<div class="text-center space-y-2">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Already have an account? Sign in", new_session_path(resource_name), class: "text-blue-600 hover:text-blue-800 text-sm" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Don't have an account? Sign up", new_registration_path(resource_name), class: "text-blue-600 hover:text-blue-800 text-sm" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "block text-blue-600 hover:text-blue-800 text-sm" %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "block text-blue-600 hover:text-blue-800 text-sm" %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "block text-blue-600 hover:text-blue-800 text-sm" %>
  <% end %>
</div>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <% begin %>
      <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "w-full mb-2 bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %><br />
    <% rescue NoMethodError %>
      <!-- OAuth provider <%= provider %> not configured -->
    <% end %>
  <% end %>
<% end %>
