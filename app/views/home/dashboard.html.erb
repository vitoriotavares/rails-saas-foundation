<div class="max-w-4xl mx-auto">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Dashboard</h1>
    <span class="text-gray-600">Welcome back, <%= @user.display_name %>!</span>
  </div>

  <div class="grid md:grid-cols-2 gap-6">
    <!-- Account Info -->
    <div class="bg-white p-6 rounded-lg shadow">
      <h2 class="text-xl font-semibold mb-4">Account Information</h2>
      <div class="space-y-2">
        <p><strong>Email:</strong> <%= @user.email %></p>
        <p><strong>Member since:</strong> <%= @user.created_at.strftime("%B %Y") %></p>
        <% if @user.oauth_user? %>
          <p><strong>Connected via:</strong> <%= @user.provider.titleize %></p>
        <% end %>
      </div>
    </div>

    <!-- Subscription Status -->
    <div class="bg-white p-6 rounded-lg shadow">
      <h2 class="text-xl font-semibold mb-4">Subscription</h2>
      <% if @subscriptions&.any? %>
        <% @subscriptions.each do |subscription| %>
          <div class="border-l-4 border-green-400 pl-4">
            <p class="font-medium text-green-700"><%= subscription.name.titleize %></p>
            <p class="text-sm text-gray-600">Status: <%= subscription.status.titleize %></p>
            <p class="text-sm text-gray-600">Next billing: <%= subscription.current_period_end&.strftime("%B %d, %Y") %></p>
          </div>
        <% end %>
      <% else %>
        <p class="text-gray-600">No active subscription</p>
        <%= link_to "Choose a Plan", billing_checkout_path(@user), class: "mt-2 inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      <% end %>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="mt-8 bg-white p-6 rounded-lg shadow">
    <h2 class="text-xl font-semibold mb-4">Quick Actions</h2>
    <div class="grid md:grid-cols-3 gap-4">
      <%= link_to billing_path(@user), class: "flex items-center p-4 border rounded-lg hover:bg-gray-50" do %>
        <div class="mr-3">üí≥</div>
        <div>
          <h3 class="font-medium">Manage Billing</h3>
          <p class="text-sm text-gray-600">View invoices and update payment methods</p>
        </div>
      <% end %>

      <%= link_to edit_user_registration_path, class: "flex items-center p-4 border rounded-lg hover:bg-gray-50" do %>
        <div class="mr-3">‚öôÔ∏è</div>
        <div>
          <h3 class="font-medium">Account Settings</h3>
          <p class="text-sm text-gray-600">Update your profile information</p>
        </div>
      <% end %>

      <a href="#" class="flex items-center p-4 border rounded-lg hover:bg-gray-50">
        <div class="mr-3">üìä</div>
        <div>
          <h3 class="font-medium">Analytics</h3>
          <p class="text-sm text-gray-600">View your usage statistics</p>
        </div>
      </a>
    </div>
  </div>
</div>
