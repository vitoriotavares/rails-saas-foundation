<div class="text-center">
  <h1 class="text-4xl font-bold text-gray-900 mb-4">Welcome to SaaS Foundation</h1>
  <p class="text-xl text-gray-600 mb-8">A complete Rails 8 template for building SaaS applications</p>
  
  <div class="grid md:grid-cols-3 gap-8 mt-12">
    <div class="bg-white p-6 rounded-lg shadow">
      <h3 class="text-lg font-semibold mb-2">🔐 Authentication</h3>
      <p class="text-gray-600">Complete Devise setup with OAuth support for Google and GitHub</p>
    </div>
    
    <div class="bg-white p-6 rounded-lg shadow">
      <h3 class="text-lg font-semibold mb-2">💳 Billing</h3>
      <p class="text-gray-600">Stripe and Paddle integrations with subscription management</p>
    </div>
    
    <div class="bg-white p-6 rounded-lg shadow">
      <h3 class="text-lg font-semibold mb-2">⚡ Background Jobs</h3>
      <p class="text-gray-600">Sidekiq configured for background processing</p>
    </div>
  </div>

  <div class="mt-12 space-x-4">
    <%= link_to "Get Started", new_user_registration_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg text-lg" %>
    
    <% dialog_id = alert_dialog do %>
      <%= alert_dialog_content(
            title: "Are you absolutely sure?", 
            description: "This action cannot be undone. This will permanently delete your account and remove your data from our servers.",
            icon: { type: "destructive" }
          ) do %>
        <%= alert_dialog_footer do %>
          <%= alert_dialog_button "Cancel", type: :cancel %>
          <%= alert_dialog_button "Continue", type: :destructive, action: "click->alert-dialog#close" %>
        <% end %>
      <% end %>
    <% end %>
    
    <button onclick="document.getElementById('<%= dialog_id %>').dispatchEvent(new CustomEvent('alert-dialog:show'))" 
            class="bg-red-500 hover:bg-red-700 text-white font-bold py-3 px-6 rounded-lg text-lg">
      Test Alert Dialog
    </button>
  </div>
</div>
